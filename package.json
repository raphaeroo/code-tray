{
  "name": "code-tray",
  "description": "Open VSCode projects from tray menu.",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "https://github.com/raphaeroo/code-tray",
  "author": "Hawks <dev@hawks.com.br>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "npm-run-all -p dist:*",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@sentry/electron": "^1.3.0",
    "electron-store": "^5.2.0",
    "fix-path": "^3.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^2.0.4"
  },
  "build": {
    "appId": "com.hawks.codetray",
    "productName": "Visual Studio Code Tray",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Utility",
      "icon": "icon.png",
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    }
  }
}
