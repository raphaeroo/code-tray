{
  "name": "code-tray",
  "description": "Open VSCode projects from tray menu.",
  "version": "2.1.0",
  "main": "main.js",
  "repository": "https://github.com/diego3g/youtube-challenge-electron-tray",
  "author": "Hawks <oi@hawks.com.br>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "npm-run-all -p dist:*",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@sentry/electron": "^2.4.0",
    "electron-store": "^7.0.2",
    "fix-path": "^3.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^2.0.7"
  },
  "build": {
    "appId": "com.hawks.codetray",
    "productName": "Code Tray",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Utility",
      "icon": "icon.png",
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    }
  }
}
